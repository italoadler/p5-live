{
  "private": true,
  "scripts": {
    "start": "NODE_DEBUG=amok,amok-compiler amok --compiler babel --browser chrome --hot sketches/*"
  },
  "dependencies": {
    "acorn": "^3.0.4",
    "escodegen": "^1.8.0",
    "p5": "^0.4.23"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "p5js"
    ],
    "globals": {
      "p5": true,
      "acorn": true,
      "escodegen": true,
      "sketch": true
    },
    "rules": {
      "new-cap": 0,
      "no-eval": 0,
      "vars-on-top": 0,
      "func-names": 0,
      "space-before-function-paren": [
        1,
        "never"
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "no-unused-vars": [
        2,
        {
          "varsIgnorePattern": "setup|draw"
        }
      ],
      "no-use-before-define": 0
    },
    "ignores": [
      "lib/*"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.5.1",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-config-p5js": "^1.0.0",
    "eslint-plugin-react": "^4.2.3"
  }
}
